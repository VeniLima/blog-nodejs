<%- include ('../../partials/header.ejs') %> 
<%- include ('../../partials/navbar.ejs') %>

<div class="container">

    <h2>Categorias</h2>
    <a class="btn btn-dark" href="/admin/categories/new">Criar nova categoria</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            
            <% categories.forEach(categories => { %>
                <tr>
                    <th><%= categories.id %></th>
                    <th><%= categories.title %></th>
                    <th><%= categories.slug %></th>
                    <th>
                        <a href="/admin/categories/edit/<%= categories.id %> " class="btn btn-dark">Editar</a>
                        <form method="POST" action="/categories/delete" style="display: inline" onsubmit="deleteConfirm(event, this)">
                            <input type="hidden" name="id" value="<%= categories.id %>">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                        
                    </th>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>


<%- include ('../../partials/footer.ejs') %> 

<script>
    function deleteConfirm(event, form){
        event.preventDefault();
        let decision = confirm("Deseja excluir esta categoria?")
        if(decision){
            form.submit();
            
        }else{

        }
        
    }
</script>