<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/navbar.ejs') %>
<body>
  <div class="container">
    <% result.articles.rows.forEach(result => { %>
    <div class="card">
      <div class="card-header">
        <h3><%=result.title%></h3>
      </div>
      <div class="card-body">
        <a class="btn btn-dark" href="/articles/<%= result.slug %> "
          >Ler artigo</a
        >
      </div>
    </div>
    <br />
    <% }) %>
    <div
      style="display: flex; justify-content: space-between; flex-direction: row"
    >
      <% if(result.page != 1 && result.page > 2) {%>
      <div class="row">
        <div class="col col-12">
          <a
            class="btn btn-dark"
            style="float: left"
            href="/articles/page/<%=result.page - 1%>"
            >Anterior</a
          >
        </div>
      </div>
      <% } else if(result.page == 2) { %>
      <div class="row">
        <div class="col col-12">
          <a class="btn btn-dark" style="float: left" href="/">Anterior</a>
        </div>
      </div>
      <%} %> <% if(result.next) {%>
      <div class="row">
        <div class="col col-12">
          <a
            class="btn btn-dark"
            style="float: right"
            href="/articles/page/<%=result.page + 1%>"
            >Proximo</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</body>
<%- include ('../../partials/footer.ejs') %>
